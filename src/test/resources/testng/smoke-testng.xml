<?xml version="1.0" encoding="UTF-8"?>
<suite name="Smoke_Test_Suite" parallel="methods" thread-count="2">

    <listeners>
        <listener class-name="com.orangehrm.listeners.TestListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Smoke_Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <packages>
            <package name="com.orangehrm.tests"/>
        </packages>
    </test>

</suite>