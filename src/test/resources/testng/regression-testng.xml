<?xml version="1.0" encoding="UTF-8"?>
<suite name="Regression_Test_Suite" parallel="classes" thread-count="3">

    <listeners>
        <listener class-name="com.orangehrm.listeners.TestListener"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Regression_Tests">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <packages>
            <package name="com.orangehrm.tests"/>
        </packages>
    </test>

</suite>